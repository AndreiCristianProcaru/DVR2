    if (/(([a-z,A-Z]{4})\s=\s[0-9]+\s[:][-][)]+)|(([a-z,A-Z]{4})+\s=\s[0-9]+\s[+]\s[0-9]+\s[:][-][)]+)|(([a-z,A-Z]{4})\s=\s[0-9]+\s[*]\s[0-9]+\s[:][-][)]+)|(([a-z,A-Z]{4})+\s=\s[0-9]+\s[-]\s[0-9]+\s[:][-][)]+)/i.test(poli1)) 
